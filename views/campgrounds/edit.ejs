<%- include('../partials/header') %>
<%- include('../partials/nav') %>


<div class="container">


<h1>Edit <b><%= campground.name %></b></h1>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="campground[name]" placeholder="Campground name" value="<%= campground.name %>">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="campground[image]" placeholder="Image url" value="<%= campground.image %>">
    </div>
    <div class="form-group">
        <label for="description">Add a description to your campground</label>
        <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="10"><%= campground.description %></textarea>
    </div>
    <button class="btn btn-outline-success">Submit</button>
</form>
    

</div>


<%- include('../partials/footer') %>