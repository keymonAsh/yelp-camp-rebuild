<%- include('../partials/nav') %>


<div class="container">


<h1>Add a new <b>Campground</b></h1>
<form action="/campgrounds" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="campground[name]" placeholder="Campground name">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="campground[image]" placeholder="Image url">
    </div>
    <div class="form-group">
        <label for="description">Add a description to your campground</label>
        <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="10"></textarea>
    </div>
    <button class="btn btn-outline-success">Submit</button>
</form>
    

</div>


